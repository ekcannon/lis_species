<script type="text/javascript" src="http://comparative-legumes.org/javascripts/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="http://comparative-legumes.org/javascripts/ckfinder/ckfinder.js"></script>

<h1>Edit Contents</h1>
<% unless @phavu.user_id.blank? %>
    <p>Last updated by <%= @phavu.user.first_name %> <%= @phavu.user.last_name %> on 
	<%= @phavu.updated_at.to_s(:date_time_long) %>.</p>
<% end %>
<p><%= link_to raw("Return Home &raquo;"), root_path %></p>
<%= form_for @phavu, :html => {:multipart => true, :onsubmit => "processingOnSubmit()"} do |f| %>
    <p>
    	<%= f.label :overview, "Overview:" %><br />
        <%= f.text_area :overview %>
	</p>
	<p>
        <%= f.label :genome_summary, "Genome Summary:" %><br />
        <%= f.text_area :genome_summary %>
    </p>
	<p>
        <%= f.label :resources, "Resources:" %><br />
        <%= f.text_area :resources %>
    </p>
	<p>
        <%= f.label :selected_references, "Selected References:" %><br />
        <%= f.text_area :selected_references %>
    </p>
	<% if has_role? :superuser %>
		<% unless @phavu.file_name.blank? %>
	        <p>Current Data File: <%= link_to @phavu.file_name, send_data_file_phavu_content_path(@phavu) %></p>
	    <% end %>
		<p>
			<label>Data File (.txt)</label><br />
		    <%= file_field(:file_upload, :file, :accept => 'text/plain') %>
		</p>
	<% end %>
	<p><%= f.submit "Update Contents", :id => "submit", :class => "submit" %></p>
<% end %>

<script type="text/javascript">
    /** Load CKEditor Instances **/
    CKEDITOR.replaceAll( function(textarea, config){ 
        config.toolbar = "<%= @tool_bar %>";
    });
	CKFinder.setupCKEditor( null, 'http://comparative-legumes.org/javascripts/ckfinder/');
</script>